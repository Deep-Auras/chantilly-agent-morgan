doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(name="csrf-token" content=csrfToken)
    title= title || 'Chantilly Agent Dashboard'

    //- Tailwind CSS via CDN
    script(src="https://cdn.tailwindcss.com")

    //- Alpine.js 3.x via CDN
    script(defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js")

    //- Custom styles
    style.
      [x-cloak] { display: none !important; }
      .sidebar-link { transition: all 0.2s ease; }
      .sidebar-link:hover { transform: translateX(4px); }
      .flash-message { animation: slideIn 0.3s ease-out; }
      @keyframes slideIn {
        from { transform: translateY(-20px); opacity: 0; }
        to { transform: translateY(0); opacity: 1; }
      }

  body.bg-gray-50.text-gray-900(x-data="dashboardApp()")
    //- Flash Messages
    if success && success.length > 0
      .fixed.top-4.right-4.z-50
        each msg in success
          .flash-message.bg-green-500.text-white.px-6.py-4.rounded-lg.shadow-lg.mb-2
            .flex.items-center.gap-2
              svg.w-5.h-5(fill="currentColor" viewBox="0 0 20 20")
                path(fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd")
              span= msg

    if error && error.length > 0
      .fixed.top-4.right-4.z-50
        each msg in error
          .flash-message.bg-red-500.text-white.px-6.py-4.rounded-lg.shadow-lg.mb-2
            .flex.items-center.gap-2
              svg.w-5.h-5(fill="currentColor" viewBox="0 0 20 20")
                path(fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd")
              span= msg

    .flex.h-screen.overflow-hidden
      //- Sidebar
      aside.bg-gray-900.text-white.w-64.flex-shrink-0.overflow-y-auto(
        x-show="sidebarOpen"
        x-transition:enter="transition ease-out duration-200"
        x-transition:enter-start="-translate-x-full"
        x-transition:enter-end="translate-x-0"
        x-transition:leave="transition ease-in duration-150"
        x-transition:leave-start="translate-x-0"
        x-transition:leave-end="-translate-x-full"
        class="md:translate-x-0"
        x-cloak
      )
        .flex.flex-col.h-full
          //- Logo and Agent Name
          .p-6.border-b.border-gray-700
            h1.text-2xl.font-bold.text-white Chantilly Agent
            p.text-sm.text-gray-400.mt-1= agentName || 'Default'

          //- Navigation Links
          nav.flex-1.px-4.py-6.space-y-2
            a.sidebar-link.flex.items-center.gap-3.px-4.py-3.rounded-lg.text-gray-300.hover_bg-gray-800.hover_text-white(
              href="/dashboard"
              class=currentPage === 'overview' ? 'bg-gray-800 text-white' : ''
            )
              svg.w-5.h-5(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6")
              span Overview

            a.sidebar-link.flex.items-center.gap-3.px-4.py-3.rounded-lg.text-gray-300.hover_bg-gray-800.hover_text-white(
              href="/dashboard/config"
              class=currentPage === 'config' ? 'bg-gray-800 text-white' : ''
            )
              svg.w-5.h-5(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z")
              span Configuration

            a.sidebar-link.flex.items-center.gap-3.px-4.py-3.rounded-lg.text-gray-300.hover_bg-gray-800.hover_text-white(
              href="/dashboard/platforms"
              class=currentPage === 'platforms' ? 'bg-gray-800 text-white' : ''
            )
              svg.w-5.h-5(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9")
              span Platforms

            a.sidebar-link.flex.items-center.gap-3.px-4.py-3.rounded-lg.text-gray-300.hover_bg-gray-800.hover_text-white(
              href="/dashboard/knowledge"
              class=currentPage === 'knowledge' ? 'bg-gray-800 text-white' : ''
            )
              svg.w-5.h-5(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253")
              span Knowledge Base

            a.sidebar-link.flex.items-center.gap-3.px-4.py-3.rounded-lg.text-gray-300.hover_bg-gray-800.hover_text-white(
              href="/dashboard/tools"
              class=currentPage === 'tools' ? 'bg-gray-800 text-white' : ''
            )
              svg.w-5.h-5(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z")
              span Tools

            a.sidebar-link.flex.items-center.gap-3.px-4.py-3.rounded-lg.text-gray-300.hover_bg-gray-800.hover_text-white(
              href="/dashboard/tasks"
              class=currentPage === 'tasks' ? 'bg-gray-800 text-white' : ''
            )
              svg.w-5.h-5(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4")
              span Complex Tasks

            if user && user.role === 'admin'
              .border-t.border-gray-700.my-4

              a.sidebar-link.flex.items-center.gap-3.px-4.py-3.rounded-lg.text-gray-300.hover_bg-gray-800.hover_text-white(
                href="/dashboard/users"
                class=currentPage === 'users' ? 'bg-gray-800 text-white' : ''
              )
                svg.w-5.h-5(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                  path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z")
                span User Management

              a.sidebar-link.flex.items-center.gap-3.px-4.py-3.rounded-lg.text-gray-300.hover_bg-gray-800.hover_text-white(
                href="/dashboard/activity"
                class=currentPage === 'activity' ? 'bg-gray-800 text-white' : ''
              )
                svg.w-5.h-5(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                  path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z")
                span Activity Logs

          //- User Info and Logout
          .p-4.border-t.border-gray-700
            .flex.items-center.justify-between
              .flex.items-center.gap-3
                .w-10.h-10.bg-gray-700.rounded-full.flex.items-center.justify-center
                  span.text-sm.font-medium= user ? user.username.charAt(0).toUpperCase() : '?'
                .flex.flex-col
                  span.text-sm.font-medium= user ? user.username : 'Guest'
                  span.text-xs.text-gray-400= user ? user.role : 'N/A'
              form(method="POST" action="/auth/logout")
                input(type="hidden" name="_csrf" value=csrfToken)
                button.text-gray-400.hover_text-white(type="submit" title="Logout")
                  svg.w-5.h-5(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                    path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1")

      //- Main Content Area
      main.flex-1.overflow-y-auto
        //- Mobile Header with Menu Toggle
        .bg-white.shadow.md_hidden.sticky.top-0.z-10
          .flex.items-center.justify-between.p-4
            button.text-gray-600(
              @click="sidebarOpen = !sidebarOpen"
              aria-label="Toggle sidebar"
            )
              svg.w-6.h-6(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16")
            h2.text-lg.font-semibold.text-gray-900= title || 'Dashboard'

        //- Page Content
        .container.mx-auto.px-4.py-8.md_px-6.md_py-10
          block content

    //- Alpine.js Dashboard App
    script.
      function dashboardApp() {
        return {
          sidebarOpen: window.innerWidth >= 768, // Open on desktop, closed on mobile

          init() {
            // Listen for window resize to auto-show/hide sidebar
            window.addEventListener('resize', () => {
              if (window.innerWidth >= 768) {
                this.sidebarOpen = true;
              }
            });

            // Get CSRF token from meta tag for AJAX requests
            const token = document.querySelector('meta[name="csrf-token"]');
            if (token) {
              window.csrfToken = token.getAttribute('content');
            }

            // Auto-dismiss flash messages after 5 seconds
            setTimeout(() => {
              const flashMessages = document.querySelectorAll('.flash-message');
              flashMessages.forEach(msg => {
                msg.style.transition = 'opacity 0.3s ease-out';
                msg.style.opacity = '0';
                setTimeout(() => msg.remove(), 300);
              });
            }, 5000);
          }
        }
      }
