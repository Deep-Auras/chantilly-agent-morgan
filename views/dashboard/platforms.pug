  script.
    function platformsManager() {
      return {
        bitrix24: {
          enabled: #{bitrix24.enabled || false},
          domain: '#{bitrix24.domain || ""}',
          webhookUrl: '#{bitrix24.webhookUrl || ""}'
        },
        googleChat: {
          enabled: #{googleChat.enabled || false}
        },
        asana: {
          enabled: #{asana.enabled || false},
          accessToken: '',
          workspaceGid: '#{asana.workspaceGid || ""}',
          botEmail: '#{asana.botEmail || ""}',
          webhookSecret: ''
        },
        bluesky: {
          enabled: #{bluesky.enabled || false},
          handle: '#{bluesky.handle || ""}',
          appPassword: '',
          serviceUrl: '#{bluesky.serviceUrl || "https://bsky.social"}'
        },
        github: {
          enabled: #{github.enabled || false},
          authType: '#{github.authType || "personal-token"}',
          accessToken: '',
          appId: '#{github.appId || ""}',
          installationId: '#{github.installationId || ""}',
          privateKey: '',
          defaultOwner: '#{github.defaultOwner || ""}',
          defaultRepo: '#{github.defaultRepo || ""}'
        },
        // Credential existence flags for masked placeholders
        hasAsanaAccessToken: #{hasAsanaAccessToken || false},
        hasAsanaWebhookSecret: #{hasAsanaWebhookSecret || false},
        hasBlueskyAppPassword: #{hasBlueskyAppPassword || false},
        hasGithubAccessToken: #{hasGithubAccessToken || false},
        hasGithubPrivateKey: #{hasGithubPrivateKey || false},

        async savePlatform(platformId) {
          try {
            // Convert platform-id to camelCase property name (google-chat → googleChat)
            const propertyName = platformId.replace(/-([a-z])/g, (g) => g[1].toUpperCase());
            const updates = this[propertyName];

            const response = await fetch(`/dashboard/platforms/${platformId}`, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
                'X-CSRF-Token': window.csrfToken
              },
              body: JSON.stringify(updates)
            });

            if (response.ok) {
              alert('Configuration saved successfully!');
              window.location.reload();
            } else {
              const error = await response.json();
              alert(`Error: ${error.error || 'Failed to save configuration'}`);
            }
          } catch (error) {
            alert(`Error: ${error.message}`);
          }
        }
      }
    }
