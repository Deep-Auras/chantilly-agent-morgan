doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Login - Chantilly Agent
    script(src="https://cdn.tailwindcss.com")

  body.bg-gray-50.min-h-screen.flex.items-center.justify-center
    .max-w-md.w-full.px-6
      //- Logo and Title
      .text-center.mb-8
        h1.text-3xl.font-bold.text-gray-900 Chantilly Agent
        p.text-gray-600.mt-2 Sign in to access the dashboard

      //- Flash Messages
      if error && error.length > 0
        .bg-red-100.border.border-red-400.text-red-700.px-4.py-3.rounded.mb-4(role="alert")
          each msg in error
            p= msg

      if success && success.length > 0
        .bg-green-100.border.border-green-400.text-green-700.px-4.py-3.rounded.mb-4(role="alert")
          each msg in success
            p= msg

      //- Login Form
      .bg-white.rounded-lg.shadow.p-8
        form(method="POST" action="/auth/login")
          input(type="hidden" name="_csrf" value=csrfToken)

          //- Username
          .mb-6
            label.block.text-sm.font-medium.text-gray-700.mb-2(for="username") Username
            input.w-full.px-3.py-2.border.border-gray-300.rounded-lg(
              type="text"
              id="username"
              name="username"
              required
              autofocus
              placeholder="Enter your username"
              class="focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            )

          //- Password
          .mb-6
            label.block.text-sm.font-medium.text-gray-700.mb-2(for="password") Password
            input.w-full.px-3.py-2.border.border-gray-300.rounded-lg(
              type="password"
              id="password"
              name="password"
              required
              placeholder="Enter your password"
              class="focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            )

          //- Submit Button
          button.w-full.bg-blue-600.text-white.py-2.px-4.rounded-lg.transition-colors.font-medium(
            type="submit"
            class="hover:bg-blue-700"
          ) Sign In

      //- Footer
      .text-center.mt-6
        p.text-sm.text-gray-600 Chantilly Agent Dashboard
        p.text-xs.text-gray-500.mt-1 Secure authentication required
