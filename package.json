{
  "name": "chantilly-adk",
  "version": "1.0.0",
  "description": "Chantilly ADK - Open-source agent development kit with Google Gemini integration, starting with Bitrix24",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "jest tests/security.test.js",
    "test:critical": "jest tests/critical-bugs.test.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "security:audit": "npm audit",
    "security:check": "npm audit --audit-level moderate",
    "prestart": "npm run security:check",
    "predeploy": "npm run test && npm run lint && npm run security:audit",
    "deploy": "gcloud run deploy chantilly-agent-${AGENT_NAME:-default} --source . --region us-central1",
    "bot:register": "node scripts/registerBot.js",
    "bot:check": "node scripts/checkBot.js",
    "build": "echo 'No build step required for Node.js application'",
    "validate": "npm run lint && npm run test && npm run security:check",
    "deploy:indexes": "gcloud firestore indexes create firestore.indexes.json --project=$GOOGLE_CLOUD_PROJECT",
    "memory:init": "node scripts/initializeMemorySystem.js",
    "memory:stats": "node scripts/memoryStats.js",
    "memory:validate": "node scripts/validateVectorSearch.js",
    "memory:test": "node scripts/testPhase1.js",
    "admin:create": "node scripts/createAdmin.js"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "chantilly",
    "ai-agent",
    "gemini",
    "bitrix24",
    "webhook",
    "cloud-run"
  ],
  "author": "Rabshan Rahman <rabshan@deepauras.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "@atproto/api": "^0.18.0",
    "@google-cloud/aiplatform": "^5.8.0",
    "@google-cloud/logging-winston": "^6.0.0",
    "@google-cloud/secret-manager": "^6.1.1",
    "@google-cloud/storage": "^7.17.1",
    "@google-cloud/tasks": "^6.2.0",
    "@google/genai": "^1.30.0",
    "@langchain/google-vertexai": "^0.2.18",
    "@octokit/auth-app": "^8.1.2",
    "@octokit/rest": "^22.0.1",
    "asana": "^3.0.11",
    "axios": "^1.7.9",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "cheerio": "^1.1.2",
    "chokidar": "^3.6.0",
    "compression": "^1.7.5",
    "connect-flash": "^0.1.1",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "firebase-admin": "^13.0.1",
    "firestore-store": "^2.0.2",
    "googleapis": "^144.0.0",
    "helmet": "^8.0.0",
    "isolated-vm": "^6.0.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pug": "^3.0.3",
    "uuid": "^11.0.4",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0"
  }
}
